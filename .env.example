# Database Configuration
# Use Vercel Postgres (recommended) or any PostgreSQL database
DATABASE_URL="postgresql://user:password@localhost:5432/league_intel?schema=public"

# NextAuth Configuration
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-32-character-secret-here"

# Cron Job Security
# Generate secret with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# Email Configuration (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="League Intel <noreply@yourdomain.com>"

# Email Digest Configuration (Optional)
# Enable/disable weekly digest emails
DIGEST_ENABLED="true"
# Day of week to send (0=Sunday, 1=Monday, 2=Tuesday, ..., 6=Saturday)
DIGEST_DAY="1"

# Environment (set by Vercel automatically in production)
NODE_ENV="development"
VERCEL_ENV="development"
VERCEL_URL=""
