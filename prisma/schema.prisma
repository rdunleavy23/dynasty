// Prisma schema for League Intel
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User accounts (NextAuth compatible)
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  leagues       League[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// League tracking
model League {
  id               String   @id @default(cuid())
  sleeperLeagueId  String   @unique
  name             String
  season           Int
  platform         Platform @default(SLEEPER)
  ownerUserId      String
  lastSyncAt       DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // League configuration from Sleeper API
  numTeams         Int      @default(12)
  rosterPositions  Json?    // ["QB", "RB", "RB", "WR", "WR", "WR", "TE", "FLEX", "FLEX", "BN", "BN", ...]
  scoringSettings  Json?    // { "rec": 1.0, "pass_td": 4, "rush_td": 6, ... }
  rosterSize       Int?     // Total roster spots
  taxiSlots        Int      @default(0)
  reserveSlots     Int      @default(0)

  // Relations
  owner                  User                     @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  teams                  LeagueTeam[]
  waiverTransactions     WaiverTransaction[]

  @@index([ownerUserId])
  @@map("leagues")
}

enum Platform {
  SLEEPER
  MFL
  ESPN
}

// Teams within a league
model LeagueTeam {
  id                  String          @id @default(cuid())
  leagueId            String
  sleeperOwnerId      String          // Sleeper's user_id for this team owner
  sleeperRosterId     Int             // Sleeper's roster_id
  displayName         String
  teamName            String?         // Optional custom team name
  avatarUrl           String?         // Sleeper avatar URL
  lastActivityAt      DateTime?
  strategyLabel       StrategyLabel?
  strategyConfidence  Float?          // 0.0 to 1.0
  notes               String?         @db.Text

  // Current season stats
  wins                Int             @default(0)
  losses              Int             @default(0)
  ties                Int             @default(0)
  pointsFor           Float           @default(0)
  pointsAgainst       Float           @default(0)

  // Roster snapshot (updated on sync)
  currentRoster       Json?           // Array of player IDs
  starters            Json?           // Array of starter player IDs

  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  // Relations
  league                    League                  @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  waiverTransactions        WaiverTransaction[]
  trades                    Trade[]                 @relation("TeamTrades")
  draftPicks                DraftPick[]
  waiverSummary             TeamWaiverSummary?
  positionalProfile         TeamPositionalProfile?

  @@unique([leagueId, sleeperRosterId])
  @@index([leagueId])
  @@map("league_teams")
}

enum StrategyLabel {
  REBUILD
  CONTEND
  TINKER
  INACTIVE
}

// Individual waiver/transaction records
model WaiverTransaction {
  id              String    @id @default(cuid())
  leagueId        String
  teamId          String
  playerId        String    // Sleeper player ID
  playerName      String
  playerPosition  String    // QB, RB, WR, TE, etc.
  playerAge       Int?
  transactionType TransactionType
  transactionDate DateTime
  week            Int
  createdAt       DateTime  @default(now())

  // Relations
  league League     @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  team   LeagueTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([leagueId, week])
  @@index([teamId, transactionDate])
  @@map("waiver_transactions")
}

enum TransactionType {
  ADD
  DROP
}

// Aggregated waiver activity summary per team
model TeamWaiverSummary {
  id                  String   @id @default(cuid())
  leagueId            String
  teamId              String   @unique
  last30dAdds         Int      @default(0)
  last30dDrops        Int      @default(0)
  addsByPosition      Json     // { "QB": 2, "RB": 4, "WR": 3, "TE": 1 }
  dropsByPosition     Json     // Same structure
  avgPlayerAgeAdded   Float?
  avgPlayerAgeDropped Float?
  activityTrend       ActivityTrend?
  calculatedAt        DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  team LeagueTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([leagueId])
  @@map("team_waiver_summary")
}

enum ActivityTrend {
  RISING
  FALLING
  STABLE
  INACTIVE
}

// Positional needs and roster composition
model TeamPositionalProfile {
  id               String   @id @default(cuid())
  leagueId         String
  teamId           String   @unique
  positionalNeeds  Json     // { "QB": "STABLE", "RB": "THIN", "WR": "DESPERATE", "TE": "HOARDING" }
  rosterCounts     Json     // { "QB": { "starters": 2, "bench": 1 }, "RB": { ... } }

  // Detailed position states (for easier querying)
  qbState          PositionalState?
  rbState          PositionalState?
  wrState          PositionalState?
  teState          PositionalState?

  calculatedAt     DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  team LeagueTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([leagueId])
  @@map("team_positional_profile")
}

enum PositionalState {
  DESPERATE
  THIN
  STABLE
  HOARDING
}

// Completed trades between teams
model Trade {
  id                String   @id @default(cuid())
  leagueId          String
  sleeperTxnId      String   @unique // Sleeper transaction ID

  // Trade participants (can be more than 2 in multi-team trades)
  teamIds           String[] // Array of team IDs involved

  // Assets traded
  players           Json     // { "team1": ["player_id1", "player_id2"], "team2": [...] }
  draftPicks        Json     // { "team1": [{ season: 2024, round: 1 }], "team2": [...] }
  faabBudget        Json?    // FAAB exchanged if applicable

  // Metadata
  status            String   // "complete", "failed", "vetoed"
  transactionDate   DateTime
  week              Int?

  createdAt         DateTime @default(now())

  // Relations
  teams             LeagueTeam[] @relation("TeamTrades")

  @@index([leagueId, transactionDate])
  @@map("trades")
}

// Draft picks (current and future)
model DraftPick {
  id              String   @id @default(cuid())
  leagueId        String
  teamId          String   // Current owner

  // Pick details
  season          Int      // Year of the draft
  round           Int
  pickNumber      Int?     // Overall pick number if known

  // Trading history
  originalTeamId  String?  // Original owner if traded
  tradedAt        DateTime? // When it was traded

  // Draft metadata
  playerId        String?  // If already drafted
  playerName      String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  team            LeagueTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([leagueId, season, round, originalTeamId])
  @@index([leagueId, season])
  @@index([teamId])
  @@map("draft_picks")
}

// Player data cache (to avoid repeated Sleeper API calls)
model Player {
  id              String   @id // Sleeper player ID
  sleeperPlayerId String   @unique

  // Basic info
  firstName       String?
  lastName        String?
  fullName        String?
  position        String
  team            String?  // NFL team
  number          Int?

  // Metadata
  age             Int?
  yearsExp        Int?
  college         String?
  injuryStatus    String?

  // Fantasy relevant
  fantasyPositions String[] // Can play multiple positions

  // Cache timestamp
  lastUpdated     DateTime @updatedAt
  createdAt       DateTime @default(now())

  @@index([position])
  @@index([team])
  @@map("players")
}
